dir="src/exec/utils"
for file in "$dir"/*.c; do
    if [ -f "$file" ]; then
        filename=$(basename "$file")
        functions=$(grep -oE '[a-z].*	.*[a-z].*\([^)]*\)' "$file")
        if [ ${#functions[@]} -gt 0 ]; then
            echo "/* $filename */"
            for func in "${functions[@]}"; do
                echo "$func"
            done
			echo
        fi
    fi
done
